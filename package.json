{
  "name": "ordino-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "tsc -p tsconfig.build.json",
    "start:dev": "nest start --watch",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/main.ts",
    "start": "node dist/main.js",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,css,scss}\"",
    "prettier:check": "prettier --check \"**/*.{ts,js,json,md,css,scss}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "migrate": "node ./scripts/run-migrations.js"
  },
  "dependencies": {
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-fastify": "^9.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@prisma/client": "^5.0.0",
    "fastify": "^4.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "prisma": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0",
    "yamljs": "^0.3.0"
  }
}
