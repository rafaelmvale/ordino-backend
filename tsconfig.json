{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2022",
      "lib": ["es2022"],
      "types": ["jest", "node"],
      "declaration": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "@domain/*": ["src/domain/*"],
        "@use-cases/*": ["src/use-cases/*"],
        "@infra/*": ["src/infra/*"],
        "@shared/*": ["src/shared/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  
